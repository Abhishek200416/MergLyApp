{
    "name": "MergeLy",
    "version": "1.0.0",
    "main": "main.js",
    "build": {
        "appId": "com.MergeLy",
        "productName": "MergeLy",
        "files": [
            "src/",
            "main.js",
            "package.json"
        ],
        "extraResources": [
            {
                "from": "src/backend/",
                "to": "backend"
            }
        ],
        "win": {
            "icon": "src/frontend/static/assets/Applogo.ico",
            "target": "nsis"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "allowToChangeInstallationDirectory": true
        }
    },
    "scripts": {
        "start": "electron .",
        "dist": "electron-builder"
    },
    "devDependencies": {
        "electron": "^25.2.0",
        "electron-builder": "^26.0.12"
    },
    "dependencies": {
        "electron-is-dev": "^2.0.0"
    }
}
